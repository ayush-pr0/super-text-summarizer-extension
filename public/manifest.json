{
    "name": "SuperText Summarizer",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Streamline your online reading experience. Extract concise summaries from web pages with a single click.",
    "permissions": ["tabs", "storage"],
    "host_permissions": ["https://*/*"],
    "author": "@Ayush",
    "icons": {
        "32": "logo.png",
        "128": "logo.png" 
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_title": "SuperText Summarizer",
        "default_popup": "index.html",
        "default_icons": {
            "32": "logo.png",
            "128": "logo.png" 
        }
    }
}
